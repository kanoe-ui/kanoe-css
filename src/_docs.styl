@import ('/_scripts/index.styl')

.doc_grid_bg
  $docGridColor = #eaeaea
  --doc-grid-base $config.grid.base
  --doc-grid-color $docGridColor
  background-color transparent
  background-image linear-gradient(45deg, var(--doc-grid-color) 25%, transparent 25%), linear-gradient(-45deg, var(--doc-grid-color) 25%, transparent 25%), linear-gradient(45deg, transparent 75%, var(--doc-grid-color) 75%), linear-gradient(-45deg, transparent 75%, var(--doc-grid-color) 75%)
  background-position 0 0, 0 var(--doc-grid-base), var(--doc-grid-base) calc(var(--doc-grid-base) * -1), calc(var(--doc-grid-base) * -1) 0
  background-size calc(var(--doc-grid-base) * 2) calc(var(--doc-grid-base) * 2)
  margin 0
  padding 0

  &.doc_hover
    *:hover
      background-color rgba(0, 0, 90, .2)
